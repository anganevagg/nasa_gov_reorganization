<div class="container p4">
    <div class="row">
        {{#each categories}}
            <div class="col-md-3">
                <div class="card text-center m-3">
                    <div class="card-body">
                        <h3 class="card-tittle text-uppercase">{{name}}</h3>
                        <p class="m-3">Description: Una breve descripcion</p>
                        <p>Tag: <a href="#">{{tag}}</a></p>
                        <a class="btn btn-primary text-uppercase" href="/categories/{{@index}}">
                            Open
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>